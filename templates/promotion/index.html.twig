{% extends 'base.html.twig' %}

{% block title %}Promotion index{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col">
                <div class="card p-5">
                    <div class="card-body">
                        <h1 class="card-title text-center">Gestion des Promotions</h1>

                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Diplôme</th>
                                <th>Année</th>
                                <th>Année de la promotion</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for promotion in promotions %}
                                <tr>
                                    <td>{{ promotion.formation.diplome }}</td>
                                    <td>{{ promotion.annee.anneePromotion }}</td>
                                    <td>{{ promotion.anneeFormation }}</td>
                                    <td><a class="btn btn-primary btn-success" href="{{ path('promotion_show', {'id': promotion.id}) }}">Voir les étudiants</a></td>
                                    <td><a class="btn btn-primary" href="{{ path('promotion_edit', {'id': promotion.id}) }}">Modifier</a></td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">Aucune Promotion enregistrée..</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a class="btn btn-primary" href="{{ path('promotion_new') }}">Ajouter une promotion</a>
                    </div>
                    {{ include('_pagination.html.twig', {'currentPath': 'promotion_index', 'page': page, 'nbPage': nbPage}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
