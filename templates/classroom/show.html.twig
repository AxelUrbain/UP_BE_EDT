{% extends 'base.html.twig' %}

{% block title %}Classroom{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Salle {{ classroom.name }}</h1>
        <div class="row">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Capacité</th>
                    <th>Equipements</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ classroom.name }}</td>
                    <td>{{ classroom.Capacity }}</td>
                    <td>
                    {% for equipment in classroom.equipments %}
                        {% if loop.last %}
                            {{ equipment.name }}
                        {% else %}
                            {{ equipment.name }} |
                        {% endif %}
                    {% else %}
                        Aucun équipement enregistrée..
                    {% endfor %}
                    </td>
                </tr>

                </tbody>
            </table>

            <a href="{{ path('classroom_index') }}">back to list</a>

            <a href="{{ path('classroom_edit', {'id': classroom.id}) }}">edit</a>

            {{ include('classroom/_delete_form.html.twig') }}

            <button class="btn btn-outline-primary" data-toggle="modal" data-target="#newModal">Ajouter un équipement</button>
        </div>
    </div>
{% endblock %}
